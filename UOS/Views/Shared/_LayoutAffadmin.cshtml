    <style>
        #overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 50%;
            margin: 2% 22% 0 22%;
            height: 90%;
            background-color: #000;
            filter: alpha(opacity=50);
            -moz-opacity: 0.5;
            -khtml-opacity: 0.5;
            opacity: 1;
            padding: 0;
            z-index: 10000;
        }

        #overlayimg {
            position: relative;
            width: 100%;
            height: 100%;
        }

        #close {
            float: right;
            display: inline-block;
            padding: 0px 7px;
            /*background: #ccc;*/
        }
        /*#close:hover {
                float: right;
                display: inline-block;
                padding: 0px 10px;
                background: #ccc;
                color: #fff;
            }*/
    </style>
    <style>
        #overlayNew {
            position: absolute; /* Sit on top of the page content */
            display: none; /* Hidden by default */
            width: 100%; /* Full width (cover the whole page) */
            height: fit-content;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: white; /* Black background with opacity */
            z-index: 2; /* Specify a stack order in case you're using a different order for other elements */
            cursor: pointer; /* Add a pointer on hover */
        }
    </style>

</head>
<body class="mx-0 " >
    
        @*area start for overlay*@
        <div class="" id="overlayNew">
            <div class="imagecontainer mb-5">
                <div class="card-body col-12 w-100 ">
                    <img class="card-img-top w-100" id="my_image_viwer" style="max-height:100%; max-width:100%; position: inherit" alt="../Images/Loading.gifs" />
                </div>
                <div class="card-footer mt-0 pt-0 mb-0 pb-0 " style="background-color: transparent; border: none; ">
                    <div class="row">
                        <button class="col-2 btn btn-success ml-auto mr-auto"     id="previousbtnimageoverlay">Previous</button>
                        <button class="col-2 btn btn-danger ml-auto mr-auto" id="closebtnimageoverlay">Close</button>
                        <button class="col-2 btn btn-success ml-auto mr-auto" id="Nextbtnimageoverlay">Next</button>
                    </div>
                </div>
            </div>
        </div>
        @*area for image overlay*@

    <div class="col-lg-12 col-md-12 col-sm-12 pl-0 " id="maincontainer">

        @Html.Partial("Navbar")
        <div style="padding-left:50px;">
            @RenderBody()
        </div>

    </div>


