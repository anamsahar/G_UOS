@model UOS.Models.Registration.GuardianDetails
@{
    ViewBag.Title = "_Gardian_detail";
    Layout = "~/Views/Shared/_layout_reg.cshtml";
}

<script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
<link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />

<div class="container bg-white " style="padding:20px;">
    <div class="row">
        <div class="col-lg-3 col-md-4 col-sm-12 col-12">
            <!-- Nav tabs -->
            <nav class="nav  flex-column text-center">
                <a class="nav-item nav-link py-4 formdata ">
                    <i class="fa fa-child fa-lg mr-2"></i> Personal Details
                </a>
                <a href="/Registration/StuGuardianDetails" class="nav-item nav-link py-4 formdata">
                    <i class="fa fa-line-chart fa-lg mr-2"></i> Guardian Details
                </a>
                <a href="/Registration/StuMetricDetails" class="nav-item nav-link  py-4 formdata active">
                    <i class="fa fa-user fa-lg mr-2"></i>  Matric/O-Level
                </a>
                <a href="/Registration/StuInterDetails" class="nav-item nav-link py-4 formdata">
                    <i class="fa fa-id-card fa-lg mr-2"></i> Inter/A-level
                </a>
                <a href="/Registration/StuBachelorsDetails" class="nav-item nav-link py-4 formdata">
                    <i class="fa fa-id-card fa-lg mr-2"></i> Bachelors Details
                </a>
                <a href="/Registration/StuAttachDocument" class="nav-item nav-link py-4 formdata">
                    <i class="fa fa-id-card fa-lg mr-2"></i> Attach Documents
                </a>
                <a href="/Registration/StuAffiliatedClg" class="nav-item nav-link py-4 formdata">
                    <i class="fa fa-paperclip fa-lg mr-2 "></i> For Affiliated Colleges
                </a>

            </nav>
        </div>

        <div class="col-lg-9 col-md-8 col-sm-12 col-12">



            @using (Html.BeginForm("StuGuardianDetails", "Registration"))
            {
                @Html.ValidationSummary("", new { @style = "color:red;" })
                <div class="col-md-12">
                    <div class="form-group row align">
                        @Html.LabelFor(reg => reg.g_name, new { @class = "col-form-label label col-lg-3 col-md-4" })
                        <div class=" col-lg-6  col-md-8">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                                </div>
                                @Html.TextBoxFor(reg => reg.g_name, new { @class = "form-control form-control-sm", @placeholder = "Father/Guardian Name" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group row align">
                        @Html.LabelFor(reg => reg.g_cnic, new { @class = "col-form-label label col-lg-3 col-md-4" })
                        <div class=" col-lg-6  col-md-8">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-id-card"></i></span>
                                </div>
                                @Html.TextBoxFor(reg => reg.g_cnic, new { @class = "form-control form-control-sm", @placeholder = "Father/Guardian CNIC", @maxlength = "15", @id = "txtFathCNIC" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group row align">
                        @Html.LabelFor(reg => reg.g_cell_no, new { @class = "col-form-label label col-lg-3 col-md-4" })
                        <div class=" col-lg-6  col-md-8">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-phone"></i></span>
                                </div>
                                @Html.TextBoxFor(reg => reg.g_cell_no, new { @class = "form-control form-control-sm", @placeholder = "Father/Guardian Cell-No", @maxlength = "11" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group row align">
                        @Html.LabelFor(reg => reg.relationship, new { @class = "col-form-label label col-lg-3 col-md-4" })
                        <div class=" col-lg-6  col-md-8">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-group"></i></span>
                                </div>
                                @Html.TextBoxFor(reg => reg.relationship, new { @class = "form-control form-control-sm", @placeholder = "Relationship of Guardian" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group row align">
                        @Html.LabelFor(reg => reg.eductn, new { @class = "col-form-label label col-lg-3 col-md-4" })
                        <div class=" col-lg-6  col-md-8">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-graduation-cap"></i></span>
                                </div>
                                @Html.TextBoxFor(reg => reg.eductn, new { @class = "form-control form-control-sm", @placeholder = "Father/Guardian Education" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group row align">
                        @Html.LabelFor(reg => reg.occpatn, new { @class = "col-form-label label col-lg-3 col-md-4" })
                        <div class=" col-lg-6  col-md-8">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-briefcase "></i></span>
                                </div>
                                @Html.TextBoxFor(reg => reg.occpatn, new { @class = "form-control form-control-sm", @placeholder = "Father/Guardian Occupation" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group row ">
                        @Html.LabelFor(reg => reg.is_gov, new { @class = "col-form-label label col-lg-3 col-md-4 align" })
                        <div class=" col-lg-6  col-md-8">
                            <div class="custom-control custom-radio small custom-control-inline">
                                @Html.RadioButtonFor(reg => reg.is_gov, false, new { @class = "custom-control-input p1", @id = "customRadio1" })
                                <label class="custom-control-label p-1" for="customRadio1">Private</label>
                            </div>
                            <div class="custom-control custom-radio small custom-control-inline">
                                @Html.RadioButtonFor(reg => reg.is_gov, true, new { @class = "custom-control-input p1", @id = "customRadio2" })
                                <label class="custom-control-label p-1" for="customRadio2">Government</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row align">
                        @Html.LabelFor(reg => reg.income, new { @class = "col-form-label label col-lg-3 col-md-4" })
                        <div class=" col-lg-6  col-md-8">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-money "></i></span>
                                </div>
                                @Html.TextBoxFor(reg => reg.income, new { @class = "form-control form-control-sm", @placeholder = "Father/Guardian Occupation" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group row align">
                        <div class=" col-lg-3 col-md-4"></div>
                        <div class=" form-group col-lg-6  col-md-8 ">
                            <button class="btn btn-success btn-rounded  mt-2 px-3  float-left btn-sm"> Sumbit </button>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>

@{

    if (TempData["Success"] != null)
    {
        <script type="text/javascript">toastr.success("@TempData["Success"].ToString()")</script>
    }
}

<script src="~/Scripts/toastr.min.js"></script>



<script>

    $(document).ready(function () {
        $('#txtFathCNIC').on('input', function (e) {

            var txtVlu = $("#txtFathCNIC").val();
            if (txtVlu.length == 5) {
                txtVlu = txtVlu + '-'
                $("#txtFathCNIC").val(txtVlu);
            }
            else if (txtVlu.length == 13)
            {
                txtVlu = txtVlu + '-'
                $("#txtFathCNIC").val(txtVlu);
            }
        });




    });
</script>