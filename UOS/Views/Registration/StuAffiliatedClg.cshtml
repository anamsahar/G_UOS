@model UOS.Models.Registration.AffiliatedCollegeDetails
@{
    ViewBag.Title = "_affiliated_Clg_Info";
    Layout = "~/Views/Shared/_layout_reg.cshtml";
}

<script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
<link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />

<div class="container bg-white " style="padding:20px;">
    <div class="row">
        <div class="col-lg-3 col-md-4 col-sm-12 col-12">
            <!-- Nav tabs -->
            <nav class="nav  flex-column text-center">
                <a  class="nav-item nav-link  py-4 formdata">
                    <i class="fa fa-child fa-lg mr-2"></i> Personal Details
                </a>
                <a  class="nav-item nav-link py-4 formdata">
                    <i class="fa fa-line-chart fa-lg mr-2"></i> Guardian Details
                </a>
                <a  class="nav-item nav-link  py-4 formdata active">
                    <i class="fa fa-user fa-lg mr-2"></i>  Matric/O-Level
                </a>
                <a  class="nav-item nav-link py-4 formdata">
                    <i class="fa fa-id-card fa-lg mr-2"></i> Inter/A-level
                </a>
                <a  class="nav-item nav-link py-4 formdata">
                    <i class="fa fa-id-card fa-lg mr-2"></i> Bachelors Details
                </a>
                <a  class="nav-item nav-link py-4 formdata">
                    <i class="fa fa-id-card fa-lg mr-2"></i> Attach Documents
                </a>
                <a href="/Registration/StuAffiliatedClg" class="nav-item nav-link py-4 formdata">
                    <i class="fa fa-paperclip fa-lg mr-2 "></i> For Affiliated Colleges
                </a>

            </nav>
        </div>
        <div class="col-lg-9 col-md-8 col-sm-12 col-12">
            <div class="tab-pane" id="p5">
                @using (Html.BeginForm("StuAffiliatedClg", "Registration"))
                {
                    @Html.ValidationSummary("", new { @style="color:red;"})
                    <div class="col-md-12">
                        <div class="form-group row align">
                            @Html.LabelFor(reg => reg.clg_name, new { @class = "col-form-label label col-lg-3 col-md-4" })
                            <div class=" col-lg-6 col-md-8">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-university"></i></span>
                                    </div>
                                    @Html.TextBoxFor(reg => reg.clg_name, new {@readonly="readonly", @class = "form-control form-control-sm", @placeholder = "Affiliated College Name" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group row align">
                            @Html.LabelFor(reg => reg.clg_ID, new { @class = "col-form-label label col-lg-3 col-md-4" })
                            <div class=" col-lg-6 col-md-8">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-bookmark"></i></span>
                                    </div>
                                    @Html.TextBoxFor(reg => reg.clg_ID, new { @readonly = "readonly", @class = "form-control form-control-sm", @placeholder = "College ID" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group row align">
                            @Html.LabelFor(reg => reg.clg_code, new { @class = "col-form-label label col-lg-3 col-md-4" })
                            <div class=" col-lg-6 col-md-8">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-list-ol "></i></span>
                                    </div>
                                    @Html.TextBoxFor(reg => reg.clg_code, new { @readonly = "readonly", @class = "form-control form-control-sm", @placeholder = "College Code" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group row align">
                            @Html.LabelFor(reg => reg.admission_date, new { @class = "col-form-label label col-lg-3 col-md-4" })
                            <div class=" col-lg-6 col-md-8">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-calendar-check"></i></span>
                                    </div>
                                    @*<input name="admission_date" id="admission_date" class="form-control form-control-sm datepicker" placeholder="Pick Date " />*@
                                    @Html.TextBoxFor(model => model.admission_date, new { @class = "form-control datepicker form-control-sm" })
                                </div>

                            </div>
                        </div>

                        <div class="form-group row align">
                            @Html.LabelFor(reg => reg.clg_roll_no, new { @class = "col-form-label label col-lg-3 col-md-4" })
                            <div class=" col-lg-6 col-md-8">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-file-text-o"></i></span>
                                    </div>
                                    @Html.TextBoxFor(reg => reg.clg_roll_no, new { @class = "form-control form-control-sm", @placeholder = "College Roll-No" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group row align">
                            @Html.LabelFor(reg => reg.session, new { @class = "col-form-label label col-lg-3 col-md-4" })
                            <div class=" col-lg-6 col-md-8">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-calendar-check-o"></i></span>
                                    </div>
                                    @Html.TextBoxFor(reg => reg.session, new { @readonly = "readonly", @class = "form-control form-control-sm", @placeholder = "Passing Session" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group row align">
                            @Html.LabelFor(reg => reg.program, new { @class = "col-form-label label col-lg-3 col-md-4" })
                            <div class=" col-lg-6 col-md-8">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-check-square-o "></i></span>
                                    </div>
                                    @Html.TextBoxFor(reg => reg.program, new { @readonly = "readonly", @class = "form-control form-control-sm", @placeholder = "Passed Program" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group row align">
                            @Html.LabelFor(reg => reg.education, new { @class = "col-form-label label col-lg-3 col-md-4" })
                            <div class=" col-lg-6 col-md-8">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-book "></i></span>
                                    </div>
                                    @Html.TextBoxFor(reg => reg.education, new { @readonly = "readonly",  @class = "form-control form-control-sm", @placeholder = "Education System" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group row align">
                            <div class=" col-lg-3 col-md-4 "></div>
                            <div class=" form-group  col-lg-6 col-md-8">
                                <button class="btn btn-success btn-rounded  mt-2 px-3  float-left btn-sm"> Submit</button>
                            </div>
                        </div>

                    </div>
                }
            </div>

            </div>
        </div>
</div>
@section Scripts {



    <script>
        $('.datepicker').datepicker({
            uiLibrary: 'bootstrap4', format: 'dd-mm-yyyy'
        });
    </script>
}