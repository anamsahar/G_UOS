@model UOS.Models.UserClasses.LibraryDetails
@{
    ViewBag.Title = "LibraryDetailsUpdate";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>LibraryDetailsUpdate Form</title>
</head>
<body class=" form-control-sm">
    @using (Html.BeginForm("LibraryDetails", "UserAccount"))
    {

        <div class="container">
            <div class="row">
                <div class="col-sm-10 col-md-9 col-lg-7 mx-auto">
                    <div class="card card-signin my-5">
                        <div class="card-body">
                            <h3 class="card-title text-center" style="font-weight:600;">Library Details Update</h3>
                            <hr class="my-4" />
                            <div class="form-signin">
                                <div class="row">
                                    <div class="form-group col-md-8">
                                        @Html.LabelFor(reg => reg.subject, new { @class = "form-check-label label" })
                                        @Html.TextBoxFor(reg => reg.subject, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(reg => reg.subject)
                                    </div>
                                    <div class="form-group col-md-4">
                                        @Html.LabelFor(reg => reg.no_titles, new { @class = "form-check-label label" })
                                        @Html.TextBoxFor(reg => reg.no_titles, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(reg => reg.no_titles)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group col-md-3">
                                        @Html.LabelFor(reg => reg.no_books, new { @class = "form-check-label label" })
                                        @Html.TextBoxFor(reg => reg.no_books, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(reg => reg.no_books)
                                    </div>
                                    <div class="form-group col-md-3">
                                        @Html.LabelFor(reg => reg.no_relevent, new { @class = "form-check-label label" })
                                        @Html.TextBoxFor(reg => reg.no_relevent, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(reg => reg.no_relevent)
                                    </div>
                                    <div class="form-group col-md-3">
                                        @Html.LabelFor(reg => reg.no_reff, new { @class = "form-check-label label" })
                                        @Html.TextBoxFor(reg => reg.no_reff, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(reg => reg.no_reff)
                                    </div>
                                    <div class="form-group col-md-3">
                                        @Html.LabelFor(reg => reg.other_rel, new { @class = "form-check-label label" })
                                        @Html.TextBoxFor(reg => reg.other_rel, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(reg => reg.other_rel)
                                    </div>
                                </div>
                             @Html.HiddenFor(reg => reg.Id)
                                <button class="btn btn-primary btn-block text-uppercase mt-4">Update</button>
                                <hr class="my-4" />

                                <a class="d-block text-center mt-2" href="../UserAccount/LibraryDetails">Back</a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>






    }
</body>

</html>
