@model UOS.Models.UserClasses.SportsDetail
@{
    ViewBag.Title = "SportsDetailUpdate";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>SportsDetailUpdate Form</title>
</head>
<body class=" form-control-sm">
    @using (Html.BeginForm("SportsDetail", "UserAccount"))
    {

        <div class="container">
            <div class="row">
                <div class="col-sm-10 col-md-9 col-lg-7 mx-auto">
                    <div class="card card-signin my-5">
                        <div class="card-body">
                            <h3 class="card-title text-center" style="font-weight:600;">Sports Detail Update</h3>
                            <hr class="my-4" />
                            <div class="form-signin">
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(reg => reg.sports_name, new { @class = "form-check-label label" })
                                        @Html.DropDownListFor(m => m.sports_name, new SelectList(Model.Sports, "Sport_Name", "Sport_Name"), new { @class = "form-control" })
                                    </div>
                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(reg => reg.item_name, new { @class = "form-check-label label" })
                                        @Html.TextBoxFor(reg => reg.item_name, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(reg => reg.item_name)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group col-md-4">
                                        @Html.LabelFor(reg => reg.quantity, new { @class = "form-check-label label" })
                                        @Html.TextBoxFor(reg => reg.quantity, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(reg => reg.quantity)
                                    </div>
                                    <div class="form-group col-md-8">
                                        @Html.LabelFor(reg => reg.remarks, new { @class = "form-check-label label" })
                                        @Html.TextBoxFor(reg => reg.remarks, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(reg => reg.remarks)
                                    </div>

                                </div>
                                @Html.HiddenFor(reg => reg.SportsId)
                                <button class="btn btn-primary btn-block text-uppercase mt-4">Update</button>
                                <hr class="my-4" />

                                <a class="d-block text-center mt-2" href="../UserAccount/SportsDetail">Back</a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
</body>

</html>

