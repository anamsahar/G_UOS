@model UOS.Models.UserClasses.BuildingDetail
@{
    ViewBag.Title = "BuildingDetailUpdate";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>BuildingDetailUpdate Form</title>
</head>
<body class=" form-control-sm">
    @using (Html.BeginForm("BuildingDetail", "UserAccount",  FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <div class="container">
            <div class="row">
                <div class="col-sm-10 col-md-9 col-lg-7 mx-auto">
                    <div class="card card-signin my-5">
                        <div class="card-body">
                            <h3 class="card-title text-center" style="font-weight:600;">Building Detail Update</h3>
                            <hr class="my-4" />
                            <div class="form-signin">
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(reg => reg.building_name, new { @class = "form-check-label label" })
                                        @Html.TextBoxFor(reg => reg.building_name, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(reg => reg.building_name)
                                    </div>
                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(reg => reg.c_area, new { @class = "form-check-label label" })
                                        @Html.TextBoxFor(reg => reg.c_area, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(reg => reg.c_area)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(reg => reg.uc_area, new { @class = "form-check-label label" })
                                        @Html.TextBoxFor(reg => reg.uc_area, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(reg => reg.uc_area)
                                    </div>
                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(reg => reg.FileName, new { @class = "form-check-label label" })
                                        <input type="file" name="ImageFile" />
                                    </div>

                                    @Html.HiddenFor(reg => reg.Id)
                                </div>

                                <button class="btn btn-primary btn-block text-uppercase mt-4">Update</button>
                                <hr class="my-4" />

                                <a class="d-block text-center mt-2" href="../UserAccount/BuildingDetail">Back</a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>






    }
</body>

</html>



