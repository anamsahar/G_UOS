@model UOS.Models.UserClasses.RecurrClass
@{
    ViewBag.Title = "RecurrExpendituresUpdate";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>RoomDetailUpdate Form</title>
</head>
<body class=" form-control-sm">
    @using (Html.BeginForm("RecurrExpenditure", "UserAccount"))
    {

        <div class="container">
            <div class="row">
                <div class="col-sm-10 col-md-9 col-lg-7 mx-auto">
                    <div class="card card-signin my-5">
                        <div class="card-body">
                            <h3 class="card-title text-center" style="font-weight:600;">RecurrExpenditure Update</h3>
                            <hr class="my-4" />
                            <div class="form-signin">
                                <div class="row">
                                    <div class="form-group col-md-8">
                                        @Html.LabelFor(reg => reg.s_expenditurename, new { @class = "form-check-label label" })
                                        @Html.DropDownListFor(m => m.s_expenditurename, new SelectList(Model.ExpenditureDD, "Description", "Description"), new { @class = "form-control" })
                                    </div>
                                    <div class="form-group col-md-4">
                                        @Html.LabelFor(reg => reg.amount, new { @class = "form-check-label label" })
                                        @Html.TextBoxFor(reg => reg.amount, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(reg => reg.amount)
                                    </div>
                                </div>        
                                @Html.HiddenFor(reg => reg.Id)                   
                                <button class="btn btn-primary btn-block text-uppercase mt-4">Update</button>
                                <hr class="my-4" />

                                <a class="d-block text-center mt-2" href="../UserAccount/Recurring">Back</a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>






    }
</body>

</html>

