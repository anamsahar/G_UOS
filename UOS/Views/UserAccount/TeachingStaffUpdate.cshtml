@model UOS.Models.UserClasses.TeachingStaff
@{
    ViewBag.Title = "TeachingStaffUpdate";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>TeachingStaffUpdate Form</title>
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
</head>
<body class=" form-control-sm">
    @using (Html.BeginForm("TeachingStaff", "UserAccount"))
    {

        <div class="container">
            <div class="row">
                <div class="col-sm-10 col-md-9 col-lg-7 mx-auto">
                    <div class="card card-signin my-5">
                        <div class="card-body">
                            <h3 class="card-title text-center" style="font-weight:600;">TeachingStaff Update</h3>
                            <hr class="my-4" />
                            <div class="form-signin">
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(reg => reg.name, new { @class = "form-check-label label" })
                                        @Html.TextBoxFor(reg => reg.name, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(reg => reg.name)
                                    </div>
                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(reg => reg.uni, new { @class = "form-check-label label" })
                                        @Html.TextBoxFor(reg => reg.uni, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(reg => reg.uni)
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group col-md-4">
                                        @Html.LabelFor(reg => reg.subject, new { @class = "form-check-label label" })
                                        @Html.TextBoxFor(reg => reg.subject, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(reg => reg.subject)
                                    </div>
                                    <div class="form-group col-md-4">
                                        @Html.LabelFor(reg => reg.naturename, new { @class = "form-check-label  label" })
                                        @Html.DropDownListFor(m => m.naturename, new SelectList(Model.Nature, "Nature_Desc", "Nature_Desc"), new { @class = "form-control" })
                                    </div>
                                    <div class="form-group col-md-4">
                                        @Html.LabelFor(reg => reg.salary, new { @class = "form-check-label label" })
                                        @Html.TextBoxFor(reg => reg.salary, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(reg => reg.salary)
                                    </div>


                                </div>

                                <div class="row">
                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(reg => reg.experiencename, new { @class = "form-check-label  label" })
                                        @Html.DropDownListFor(m => m.experiencename, new SelectList(Model.Experience, "Experience_Duration", "Experience_Duration"), new { @class = "form-control" })
                                    </div>
                                    <div class="form-group col-md-6">
                                        @*@Html.LabelFor(reg => reg.appoint_date, new { @class = "form-check-label label" })
                                        <input id="datepicker" name="appoint_date" class="form-control form-control-sm" />
                                        @Html.ValidationMessageFor(reg => reg.appoint_date)*@
                                        <div class="form-group input-group-sm">
                                            @Html.LabelFor(model => model.appoint_date, new { @class = "form-check-label label" })
                                            @Html.TextBoxFor(model => model.appoint_date, new { @class = "form-control datepicker form-control-sm" })
                                            @Html.ValidationMessageFor(model => model.appoint_date)
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group col-md-4">
                                       @Html.LabelFor(reg => reg.degreeName, new { @class = "form-check-label  label" })
                                       @Html.DropDownListFor(m => m.degreeName, new SelectList(Model.Degree, "Degree_Description", "Degree_Description"), new { @class = "form-control" })
                                    </div>
                                    <div class="form-group col-md-4">
                                        @Html.LabelFor(reg => reg.designationname, new { @class = "form-check-label  label" })
                                        @Html.DropDownListFor(m => m.designationname, new SelectList(Model.Designation, "Designation", "Designation"), new { @class = "form-control" })
                                    </div>
                                    <div class="form-group col-md-4">
                                        @Html.LabelFor(reg => reg.pass_yearname, new { @class = "form-check-label  label" })
                                        @Html.DropDownListFor(m => m.pass_yearname, new SelectList(Model.Year, "Year", "Year"), new { @class = "form-control" })
                                    </div>


                                </div>
                                <div class="row">
                                    <div class="form-group col-md-12">
                                        @Html.LabelFor(reg => reg.remarks, new { @class = "form-check-label label" })
                                        @Html.TextBoxFor(reg => reg.remarks, new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(reg => reg.remarks)
                                    </div>
                                </div>
                             @Html.HiddenFor(reg => reg.Id)
                                <button class="btn btn-primary btn-block text-uppercase mt-4">Update</button>
                                <hr class="my-4" />

                                <a class="d-block text-center mt-2" href="../UserAccount/TeachingStaff">Back</a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>






    }

    @section Scripts {



        <script>
            $('.datepicker').datepicker({
                uiLibrary: 'bootstrap4', format: 'dd-mm-yyyy'
            });

        </script>
    }
</body>

</html>

